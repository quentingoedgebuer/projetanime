{% extends "base.html.twig" %}
{% block main %}
Projet Anime -
{% endblock %}

{% block title %} {{parent()}} Inscription {% endblock %}

{% block contenu %}
<style>
    body{
        background:url(fondnaruto.png);
        color:white;       

    }
    </style>
{% if form.valide is defined %}     
{% if form.valide == true %}
    <h1>Inscription réussie</h1>       
    <h1>Voici votre identifiant : {{form.email}}</h1>
{% if form.role == 1 %}           
    <h1>Vous êtes administrateur du site</h1>       
{% else %}           
    <h1>Vous êtes un client du site </h1>       
        {% endif %}  
{% else %} 
    <h1>Echec de l'inscription</h1>       
    <h1>Erreur : {{form.message}}</h1>       
    <h1><a href="index.php?page=inscription">Retourner sur la page d'inscription</a></h1>    
 {% endif %}   
    
{% else %} 
<style>
    form{
        padding-top:20px;
    }
</style>

        <center>
            <form class="col-5" method="post" action="index.php?page=inscription"> 
        
                <div class="form-row">
                    <div class="col-md-6">
                    <label for="nom">Nom</label>
                    <input type="nom" class="form-control" name="nom" >
                    </div>
                    
                    <div class="col-md-6">
                    <label for="prenom">Prénom</label>
                    <input type="prenom" class="form-control" name="prenom">
                    </div>
                </div>

                </br>

                 <div class="form-group">
                    <label for="inputPseudo">Pseudo</label>
                    <input type="inputPseudo" class="form-control" name="inputPseudo" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>

                <div class="form-group">
                    <label for="inputEmail">Adresse mail</label>
                    <input type="inputEmail" class="form-control" name="inputEmail" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="inputPassword" class="form-control" aria-describedby="passwordHelpBlock">
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </small>
                </div>

                <div class="form-group">
                    <label for="inputPassword2">Confirmer le mot de passe</label>
                    <input type="password" name="inputPassword2" class="form-control" aria-describedby="passwordHelpBlock">
                </div>
                

                
                 <div class="form-group">
                    <label for="role">Rôle</label>
                    <select type="role" id="role" class="form-control" name="role">
                    <option selected>1</option>
                    <option>2</option>
                    </select>
                </div>


                <button type="submit" class="btn btn-primary mx-auto" name="btInscription">Valider</button>
            </form>
            
        </center>
    
     {% endif %}
{% endblock %}