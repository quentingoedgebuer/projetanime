{% extends "base.html.twig" %}
{% block main %}
Projet Anime -
{% endblock %}

{% block title %} {{parent()}} Connexion {% endblock %}

{% block contenu %}
<style>
    body{
        background:url(nagissa.png);
        color:white;
    }
    </style>

{% if form.Valide is defined %}     
{% if form.Valide == true %}
    <h1>connexion réussie</h1>       
    <h1>Voici votre identifiant :{{form.email}}</h1>
{% if form.role == 1 %}           
    <h1>Vous êtes administrateur du site</h1>       
{% else %}           
    <h1>Vous êtes un client du site </h1>       
        {% endif %}  
{% else %} 
    <h1>Echec de la connexion</h1>       
    <h1>Erreur : {{form.message}}</h1>       
    <h1><a href="index.php?page=connexion">Retourner sur la page de connexion</a></h1>    
 {% endif %}   
    
{% else %} 
<style>
    form{
        padding-top:20px;
    }
</style>

<center>
  <form class="col-6" method="post" action="index.php?page=connexion"> 
  
                <div class="form-group">
                    <label for="inputEmail">Email address</label>
                    <input type="email" class="form-control" name="inputEmail" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>

                <div class="form-group">
                    <label for="inputPseudo">Pseudo</label>
                    <input type="inputPseudo" class="form-control" name="inputPseudo" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="inputPassword" class="form-control" aria-describedby="passwordHelpBlock">
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </small>
                </div>
                <button type="submit" class="btn btn-primary mx-auto" name="btConnecter">Valider</button>
            </form>
</center>

{% endif %}
{% endblock %}